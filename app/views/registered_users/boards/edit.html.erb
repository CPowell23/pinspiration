<h1>Edit Your Board</h1>

<%= form_for [current_user, @board], url: "/#{current_user.username}/#{@board.name}" do |f| %>
  <%= f.text_field :name, placeholder: "name" %>
  <%= f.text_field :description, placeholder: "description" %>
  <%= f.collection_select :category, @categories, :id, :name, :prompt => 'Select Category' %>
  <%= f.select :private, ['public', 'private'], selected: 'public' %>
  <%= submit_tag "Submit" %>
<% end %>

<%= link_to 'Cancel', registered_users_boards_path(current_user.username, @board.name) %>
