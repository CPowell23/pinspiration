<%= link_to "Log in", login_path, class: "btn-login" %>

<section class="login">
  <section class="login-form">
    <%= form_for(PinspirationCredential.new, :url => {:controller => 'pinspiration_credentials', :action => 'create'}) do |f| %>
      <i class="fa fa-pinterest" aria-hidden="true"></i>
      <h2>Welcome to Pinspirations, the world's catalog of ideas</h2>

      <section class="register">
        <%= f.text_field :name, placeholder: "Name", class_name: "input-half" %>
        <%= f.text_field :username, placeholder: "Username", class_name: "input-half" %>
        <%= f.text_field :email, placeholder: "email@example.com" %>
        <%= f.password_field :password, placeholder: "Password" %>
        <%= f.password_field :password_confirmation, placeholder: "Retype password" %>
        <%= f.text_field :phone_number, placeholder: "Phone number" %>
        <%= f.text_field :image_url, placeholder: "Image url" %>
      </section><!-- end register -->
      <%= f.submit "Continue", {class: "btn-continue"} %>
      <% end %>
      <h4>OR<h4>
      <%= button_to 'Google Sign In', google_login_path, {class: "btn-google"} %>
  </section><!-- end login-form -->
</section><!-- end login -->
