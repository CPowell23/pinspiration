<%= render partial: 'shared/user' %>
<section class="content">
  <div id="masonry-container" class="transitions-enabled infinite-scroll centered clearfix">
    <% @following.each do |f| %>
      <div class="box col4 follower">
      <%= link_to registered_user_path(f.username) do %>
          <section class="follower">
            <% if f.image_url.present? %>
              <%= image_tag(f.image_url) %>
            <% else %>
              <i class="fa fa-user" aria-hidden="true"></i>
            <% end %>
            <%= f.name %>
            <% if current_user == @user %>
              <%= link_to "Unfollow", registered_users_following_destroy_path(current_user.username, f.username, :option => 'from_following_index_page'), method: :delete %>
            <% end %>
          </section>
        </div><!-- end col4 -->
      <% end %>
    <% end %>
  </div><!-- end masonry -->
</section>
